extends layout

block content
  .main
    .row.min-vh-100.m-0
      include includes/SideBar

      .col.background-main
        .row
          #page-title.d-flex.justify-content-between.align-items-center.px-3.py-2
            h1.page-header.text-overflow.col-md-8 إضافة تصنيف جديدة
            .col.d-flex.justify-content-end
              a.btn.btn-primary.btn-labeled.mx-2(href='/manager/category')
                .fa.fa-list
                span= " إدارة التصنيفات "
        

        
        
        .row.px-2

          if category
            form#bigform(method='POST', action='/manager/edit-category' enctype='multipart/form-data')
              
              input(type='hidden', name='categoryId', id='categoryId', value=category._id)
              include includes/categoryform
          else
            form#bigform(method='POST', action='/manager/add-category', enctype='multipart/form-data')
              include includes/categoryformempty


    script(src='/js/categoryForm.js')